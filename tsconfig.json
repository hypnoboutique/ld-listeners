{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "types": [
      "jest",
      "node"
    ],
    "typeRoots": [",./src/types"],
    "baseUrl": ".",
    "paths": {}
  },
  "include": [
    "./index.js",
    "src"
  ]
}
